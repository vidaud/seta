{
    "swagger": "2.0",
    "basePath": "/authentication/v1",
    "paths": {
        "/refresh": {
            "post": {
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/AccessToken"
                        }
                    },
                    "401": {
                        "description": "Refresh token verification failed"
                    }
                },
                "description": "JWT refresh access token",
                "operationId": "post_jwt_refresh_token",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "type": "string",
                        "description": "Bearer JWT refresh token"
                    }
                ],
                "tags": [
                    ""
                ]
            }
        },
        "/user/token": {
            "post": {
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/AuthTokens"
                        }
                    },
                    "401": {
                        "description": "Invalid User"
                    },
                    "403": {
                        "description": "Invalid Signature"
                    }
                },
                "description": "JWT token for users",
                "operationId": "post_jwt_user_token",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "username": {
                                    "type": "string"
                                },
                                "provider": {
                                    "type": "string"
                                },
                                "rsa_original_message": {
                                    "type": "string"
                                },
                                "rsa_message_signature": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "tags": [
                    ""
                ]
            }
        }
    },
    "info": {
        "title": "JWT token authentication",
        "version": "1.0",
        "description": "JWT authetication for user and guests"
    },
    "produces": [
        "application/json"
    ],
    "consumes": [
        "application/json"
    ],
    "tags": [
        {
            "name": "",
            "description": "Authentication endpoints"
        }
    ],
    "definitions": {
        "AuthTokens": {
            "allOf": [
                {
                    "$ref": "#/definitions/AccessToken"
                },
                {
                    "properties": {
                        "refresh_token": {
                            "type": "string",
                            "description": "JWT refresh token"
                        }
                    },
                    "type": "object"
                }
            ]
        },
        "AccessToken": {
            "properties": {
                "access_token": {
                    "type": "string",
                    "description": "JWT access token"
                }
            },
            "type": "object"
        }
    },
    "responses": {
        "ParseError": {
            "description": "When a mask can't be parsed"
        },
        "MaskError": {
            "description": "When any error occurs on mask"
        }
    }
}
